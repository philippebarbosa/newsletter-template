          <mj-image src="http://barbo.sa.com/pgUDcs+" width="50px"/>

            <mj-divider
                padding-top="20"
                padding-bottom="0"
                padding-left="0"
                padding-right="0"
                border-width="1px"
                border-color="#f8f8f8"/>
        </mj-column>
      </mj-section>

      <!-- Baseline -->

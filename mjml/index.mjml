      <!-- Full width text -->
      <mj-section full-width="full-width" background-color="#f8f4f4">
            <mj-column width="100%">

              <mj-text font-size="20"
                       font-family="Montserrat"
                       color="#000">
                       TITRE DU PARAGRAPHE
              </mj-text>

              <mj-text font-family="Roboto Slab" color="#6a6262">
                    Lorem ipsum dolor sit amet, consectetur adipiscing elit. Proin rutrum enim eget magna efficitur, eu
                    <a href="http://www.philippebarbosa.com" target="_blank" style="color:#60ed8e; text-decoration:none;">semper augue semper</a>.
                    Aliquam erat volutpat. Cras id dui lectus. Vestibulum sed finibus lectus, sit amet suscipit nibh. Proin nec commodo purus. Sed eget nulla elit. Nulla aliquet mollis faucibus.
              </mj-text>

              <mj-button background-color="#60ed8e" color="black" align="center" width="200px" padding-top="40px" padding-bottom="40px" font-family="Montserrat" href="http://www.philippebarbosa.com">CLICK ME</mj-button>

              <mj-text font-size="20"
                       font-family="Montserrat"
                       color="#000">
                       UN AUTRE PARAGRAPHE
              </mj-text>

              <mj-text font-family="Roboto Slab" color="#6a6262">
                    Lorem ipsum dolor sit amet, consectetur adipiscing elit. Proin rutrum enim eget magna efficitur, eu semper augue semper. Aliquam erat volutpat. Cras id dui lectus. Vestibulum sed finibus lectus, sit amet suscipit nibh. Proin nec commodo purus. Sed eget nulla elit. Nulla aliquet mollis faucibus.
              </mj-text>
            </mj-column>

            <mj-column width="100%">
              <mj-image src="http://barbo.sa.com/BTeupW+" width="110px" align="right" padding-top="60px" padding-bottom="60px"/>
            </mj-column>

            <mj-column width="100%">
              <mj-image src="https://www.philippebarbosa.com/app/uploads/2017/09/okari-spa-10-Credit-PhilippeBarbosa-960x640.jpg"/>
            </mj-column>
      </mj-section>


      <!-- Push text -->
      <mj-section full-width="full-width" background-color="#60ed8e">
            <mj-column width="500">

              <mj-text font-size="20"
                       align="center"
                       font-weight="bold"
                       font-family="Montserrat"
                       color="#000">VOUS AUSSI AVEZ BESOIN D'UN PHOTOGRAPHE ?</mj-text>

                <mj-text font-family="Roboto Slab" color="#6a6262" font-size="14px" align="center">
                    Je suis disponible pour écouter votre projet et établir un devis
              </mj-text>

                <mj-button background-color="#ffffff"
                           href="https://www.philippebarbosa.com/contact/"
                           font-family="Montserrat"
                           color="black">
                    CONTACTEZ MOI ICI !

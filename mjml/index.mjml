<mjml>
  <mj-head>
    <mj-font name="Roboto Slab" href="https://fonts.googleapis.com/css?family=Roboto+Slab" />
    <mj-font name="Montserrat" href="https://fonts.googleapis.com/css?family=Montserrat:900" />
  </mj-head>
  <mj-body>
    <mj-container background-color="#fff">


      <mj-section full-width="full-width" background-color="#f8f4f4">
